generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  subscriptions Subscription[]
  documents     Document[]
  interviews    Interview[]
}

model Subscription {
  id                String   @id @default(cuid())
  userId            String
  stripeId          String   @unique
  plan              String
  status            String
  currentPeriodEnd  DateTime?
  user              User     @relation(fields: [userId], references: [id])
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  type        String
  title       String
  rawText     String
  structured  Json?
  aiVersions  Json?
  fileUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model Interview {
  id          String   @id @default(cuid())
  userId      String
  jobTitle    String
  questions   Json
  answers     Json?
  feedback    Json?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}
